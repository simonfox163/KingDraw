<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/opArea"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_weight="1"
        android:background="@android:color/darker_gray"  
        android:orientation="horizontal" >
        
          <ImageView
                android:id="@+id/openImg"
	            android:layout_width="40dip"
	            android:layout_height="wrap_content"
	            android:background="@drawable/open"
                />
                
             <ImageView
                android:id="@+id/saveImg"
	            android:layout_width="40dip"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="20dip"
	            android:background="@drawable/save"/>
               
        
        
        	<ImageView
                android:id="@+id/shapeState"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="30dip"
                />
                
             <ImageView
                android:id="@+id/colorState"
	            android:layout_width="25dip"
	            android:layout_height="25dip"
	            android:layout_marginTop="7dip"
	            android:layout_marginLeft="10dip"
	            android:background="@android:color/black"/>
               
                
              <ImageView
                android:id="@+id/sizeState"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="5dip"
	            android:layout_marginLeft="20dip"
                />
        
    </LinearLayout>

    <RelativeLayout
        android:layout_width="320dip"
        android:layout_height="450dip"
        android:orientation="horizontal" 
        android:layout_below="@+id/opArea">
        
        <LinearLayout
            android:id="@+id/toolArea"
            android:layout_width="40dip"
            android:layout_height="fill_parent"
            android:background="@android:color/darker_gray"
            android:orientation="vertical">
            
            <ImageView
                android:id="@+id/lineImg"
	            android:layout_width="40dip"
	            android:layout_height="30dip"
	            android:background="@drawable/line"
	             android:layout_marginTop="30dip"
                />
                
             <ImageView
                android:id="@+id/ovalImg"
	            android:layout_width="40dip"
	            android:layout_height="30dip"
	            android:layout_marginTop="10dip"
	            android:background="@drawable/oval"
                />
             <ImageView
                android:id="@+id/curveImg"
	            android:layout_width="40dip"
	            android:layout_height="30dip"
	            android:layout_marginTop="10dip"
	            android:background="@drawable/curv"
                />
             <ImageView
                android:id="@+id/rectImg"
	            android:layout_width="40dip"
	            android:layout_height="30dip"
	            android:layout_marginTop="10dip"
	            android:background="@drawable/rect"
                />
             
             
              <ImageView
                android:id="@+id/eraImg"
	            android:layout_width="40dip"
	            android:layout_height="30dip"
	            android:background="@drawable/eraser"
	            android:layout_marginTop="10dip"
                />
              
              <ImageView
                android:id="@+id/colorImg"
	            android:layout_width="40dip"
	            android:layout_height="30dip"
	            android:background="@drawable/color"
	            android:layout_marginTop="10dip"
                />
              
              <ImageView
                android:id="@+id/pensizeImg"
	            android:layout_width="40dip"
	            android:layout_height="30dip"
	            android:background="@drawable/pensize"
	            android:layout_marginTop="10dip"
                />
              <ImageView
                android:id="@+id/styleImg"
	            android:layout_width="40dip"
	            android:layout_height="30dip"
	            android:background="@drawable/style"
	            android:layout_marginTop="10dip"
                />
              
              <ImageView
                android:id="@+id/redoImg"
	            android:layout_width="40dip"
	            android:layout_height="30dip"
	            android:layout_marginTop= "10dip"
	            android:background="@drawable/next"
                />
             <ImageView
                android:id="@+id/undoImg"
	            android:layout_width="40dip"
	            android:layout_height="30dip"
	            android:background="@drawable/back"
	            android:layout_marginTop="10dip"
                />
        </LinearLayout> 
        
		<LinearLayout
		    android:id="@+id/paintArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/toolArea"
            >
	     </LinearLayout> 
        
    </RelativeLayout>

</RelativeLayout>
